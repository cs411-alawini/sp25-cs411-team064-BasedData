<!DOCTYPE html>
<html>
<head>
  <title>Possible Diseases</title>
</head>
<body>
  <h1>Possible Diseases Based on Your Symptoms</h1>

  <% if (diseases.length > 0) { %>
    <ul>
      <% diseases.forEach(function(disease) { %>
        <li>
          <strong><%= disease.Disease_Name %></strong> 
          (Matched Symptoms: <%= disease.match_count %>)
          <form action="/select-disease/<%= disease.Disease_ID %>/<%= userId %>" method="GET" style="display:inline;">
            <button type="submit">View Treatments</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No diseases matched your symptoms. Try again.</p>
  <% } %>

  <br>
  <a href="/home/<%= userId %>">Back to Home</a> |
  <a href="/delete/<%= userId %>">Delete My Account</a>
</body>
</html>

